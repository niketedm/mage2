<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="authorize-js" type="host">js.authorize.net</value>
                <value id="testauthorize-js" type="host">jstest.authorize.net</value>
                <value id="visacheckoutsandbox-js" type="host">sandbox-assets.secure.checkout.visa.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="authorize-js" type="host">js.authorize.net</value>
                <value id="testauthorize-js" type="host">jstest.authorize.net</value>
                <value id="authorize-api" type="host">api.authorize.net</value>
                <value id="testauthorize-api" type="host">apitest.authorize.net</value>
                <value id="iframe-url" type="host">accept.authorize.net</value>
                <value id="testiframe-url" type="host">test.authorize.net</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="authorize-js" type="host">js.authorize.net</value>
                <value id="testauthorize-js" type="host">jstest.authorize.net</value>
                <value id="iframe-url" type="host">accept.authorize.net</value>
                <value id="testiframe-url" type="host">test.authorize.net</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
