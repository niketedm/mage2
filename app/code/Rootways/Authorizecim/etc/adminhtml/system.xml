                    <field id="title" translate="label" type="text" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Title</label>
                        <config_path>payment/rootways_authorizecim_option_hosted/title</config_path>
                    </field>
                    
                    <field id="hosted_form_order_btn_txt" translate="label comment" type="text" sortOrder="13" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Hosted Form Place Order Button Text</label>
                        <config_path>payment/rootways_authorizecim_option_hosted/hosted_form_order_btn_txt</config_path>
