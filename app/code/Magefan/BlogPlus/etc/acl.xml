<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Magefan_Blog::elements">
                        <resource id="Magefan_Blog::post">
                            <resource id="Magefan_Blog::post_save">
                                <resource id="Magefan_BlogPlus::post_save_published" title="Save Published (Blog+)" sortOrder="10" />
                            </resource>
                        </resource>
                        <resource id="Magefan_Blog::category">
                            <resource id="Magefan_Blog::category_save">
                                <resource id="Magefan_BlogPlus::category_save_published" title="Save Published (Blog+)" sortOrder="10"/>
                            </resource>
                        </resource>
                        <resource id="Magefan_Blog::tag">
                            <resource id="Magefan_Blog::tag_save">
                                <resource id="Magefan_BlogPlus::tag_save_published" title="Save Published (Blog+)" sortOrder="10" />
                            </resource>
                        </resource>
                        <resource id="Magefan_Blog::comment">
                            <resource id="Magefan_Blog::comment_save">
                                <resource id="Magefan_BlogPlus::comment_save_published" title="Save Published (Blog+)" sortOrder="10"/>
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
