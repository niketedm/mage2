<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <people_watching>
            <views>
                <enabled>1</enabled>
                <minimum_views>2</minimum_views>
                <lifetime>60</lifetime>
                <number_inflate>0</number_inflate>
                <message><![CDATA[{{views}} other people are looking at this product right now.]]></message>
                <message_single><![CDATA[1 other person is looking at this product right now.]]></message_single>
                <style><![CDATA[#people-watching-notification {
    color: red;
    font-weight: bold;
}]]></style>
            </views>
        </people_watching>
    </default>
</config>
